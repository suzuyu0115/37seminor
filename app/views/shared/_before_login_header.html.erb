<header class="text-gray-600 body-font">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <%= link_to quests_path do %>
      <span>hunter</span>
    <% end %>
    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
      <%= link_to t('quests.index.title'), quests_path, class: 'mr-5 hover:text-gray-900' %>
      <%= link_to t('defaults.signup'), new_user_path, class: 'mr-5 hover:text-gray-900' %>
    </nav>
    <%= link_to login_path do %>
      <button class="inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 md:mt-0"><%= t('defaults.login') %>
        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
          <path d="M5 12h14M12 5l7 7-7 7"></path>
        </svg>
      </button>
    <% end %>
  </div>
</header>